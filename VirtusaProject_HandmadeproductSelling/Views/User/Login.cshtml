@model VirtusaProject_HandmadeproductSelling.Models.Registration
@{
    ViewBag.Title = null;
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<div>
    <h2 style="text-align:center">Customer Login</h2>
    @using (Html.BeginForm())
    {

        <form class="action" method="post">
            <div class="container"style="background-color: #74EBD5; background-image: linear-gradient(90deg, #74EBD5 0%, #9FACE6 100%); ">
                <table>
                    <tr>
                        <tb >Email</tb>
                        <tb>@Html.TextAreaFor(m => m.email, new { @class = "form-control", @PlaceHolder = "Email" })</tb>
                        @*<tb style="color:red">@Html.ValidationMessageFor(m => m.AdminName)</tb>*@
                    </tr>

                    <tr>
                        <tb>Password</tb>
                        <td>@Html.PasswordFor(m => m.c_password, new { @class = "form-control", @PlaceHolder = "Enter Password" })</td>
                        @*<td style="color:red">@Html.ValidationMessageFor(m => m.A_Password)</td>*@
                    </tr>
                    <tr>
                        <td colspan="2"><input type="submit" value="Login" class="btn btn-primary"></td>

                    </tr>

                </table>







                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </div>

        </form>
        <hr />
        <div style="align-items:center;width:100%;height:100%">
            <img src="~/Content/Image/crochet.jpg" alt="bg" />

        </div>
       

    }
</div>

